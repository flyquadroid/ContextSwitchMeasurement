<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:paddingBottom="15dp" android:id="@+id/scrollView">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="30dp" android:paddingTop="20dp" android:paddingRight="30dp"
              android:paddingBottom="20dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="JNI"
            android:id="@+id/textView" android:textSize="30dp"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="Device"
              android:id="@+id/textViewHeadlineDevice" android:paddingTop="25dp" android:paddingBottom="5dp"
              android:layout_gravity="center_horizontal" android:gravity="center"/>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="2dp"
                  android:paddingRight="2dp" android:paddingBottom="5dp" android:id="@+id/linearLayoutModel"
                  android:layout_gravity="center_horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Model:"
                  android:id="@+id/textViewLabelModel" android:textSize="20dp" android:paddingRight="15dp"
                  android:textColor="#818181"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="-"
                  android:id="@+id/textViewDeviceModel" android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="2dp"
                  android:paddingRight="2dp" android:paddingBottom="5dp" android:id="@+id/linearLayoutBrand"
                  android:layout_gravity="center_horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Brand:"
                  android:id="@+id/textViewLabelBrand" android:textSize="20dp" android:paddingRight="15dp"
                  android:textColor="#818181"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="-"
                  android:id="@+id/textViewDeviceBrand" android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="2dp"
                  android:paddingRight="2dp" android:paddingBottom="5dp" android:id="@+id/linearLayoutProduct"
                  android:layout_gravity="center_horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Product:"
                  android:id="@+id/textViewLabelProduct" android:textSize="20dp" android:paddingRight="15dp"
                  android:textColor="#818181"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="-"
                  android:id="@+id/textViewDeviceProduct" android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="2dp"
                  android:paddingRight="2dp" android:paddingBottom="5dp" android:id="@+id/linearLayoutManufacturer"
                  android:layout_gravity="center_horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Manufacturer:"
                  android:id="@+id/textViewLabelManufacturer" android:textSize="20dp" android:paddingRight="15dp"
                  android:textColor="#818181"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="-"
                  android:id="@+id/textViewDeviceManufacturer" android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="2dp"
                  android:paddingRight="2dp" android:paddingBottom="5dp" android:id="@+id/linearLayoutHardware"
                  android:layout_gravity="center_horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Hardware:"
                  android:id="@+id/textViewLabelHardware" android:textSize="20dp" android:paddingRight="15dp"
                  android:textColor="#818181"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="-"
                  android:id="@+id/textViewDeviceHardware" android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="2dp"
                  android:paddingRight="2dp" android:paddingBottom="5dp" android:id="@+id/linearLayoutDevice"
                  android:layout_gravity="center_horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Device:"
                  android:id="@+id/textViewLabelDevice" android:textSize="20dp" android:paddingRight="15dp"
                  android:textColor="#818181"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="-"
                  android:id="@+id/textViewDevice" android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="2dp"
                  android:paddingRight="2dp" android:paddingBottom="5dp" android:id="@+id/linearLayoutBoard"
                  android:layout_gravity="center_horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Board:"
                  android:id="@+id/textViewLabelBoard" android:textSize="20dp" android:paddingRight="15dp" android:textColor="#818181"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="-"
                  android:id="@+id/textViewDeviceBoard" android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="2dp"
                  android:paddingRight="2dp" android:paddingBottom="5dp" android:id="@+id/linearLayoutCpuAbi"
                  android:layout_gravity="center_horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="CPU ABI:"
                  android:id="@+id/textViewLabelCpuApi" android:textSize="20dp" android:paddingRight="15dp"
                  android:textColor="#818181"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="-"
                  android:id="@+id/textViewDeviceCpuAbi" android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="2dp"
                  android:paddingRight="2dp" android:paddingBottom="5dp" android:id="@+id/linearLayoutCpuAbi2"
                  android:layout_gravity="center_horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="CPU ABI 2:"
                  android:id="@+id/textViewLabelCpuAbi2" android:textSize="20dp" android:paddingRight="15dp"
                  android:textColor="#818181"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="-"
                  android:id="@+id/textViewDeviceCpuAbi2" android:gravity="right"/>
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Context Switch Tests"
            android:id="@+id/textViewHeadlineTesting" android:paddingTop="40dp" android:paddingBottom="5dp"
            android:gravity="center"/>
    <RadioGroup
            android:id="@+id/radioGroupMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java → C"
                android:id="@+id/radioButtonFromJavaToC" android:checked="true" android:textSize="20dp"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java ← C"
                android:id="@+id/radioButtonFromCToJava" android:checked="false" android:textSize="20dp"/>
    </RadioGroup>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:paddingTop="20dp" android:paddingBottom="0dp">
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Run Test"
                android:id="@+id/buttonRunTest" android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="Results"
              android:id="@+id/textViewHeadlineResults" android:paddingTop="40dp" android:paddingBottom="5dp"
              android:gravity="center"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:paddingLeft="2dp" android:paddingRight="2dp"
            android:paddingBottom="5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Java → C:"
                android:id="@+id/textViewSublineResultJavaToC" android:textSize="20dp" android:paddingRight="15dp"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0"
                android:id="@+id/textViewResultFromJavaToC" android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="2dp"
                  android:paddingRight="2dp" android:paddingBottom="30dp" android:id="@+id/linearLayout"
                  android:layout_gravity="right">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Java ← C:"
                  android:id="@+id/textViewSublineResultCToJava" android:textSize="20dp" android:paddingRight="15dp"/>
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="0"
                  android:id="@+id/textViewResultFromCToJava" android:gravity="right"/>
    </LinearLayout>
    <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Send Report"
            android:id="@+id/buttonSendReport" android:layout_gravity="center_horizontal"/>
</LinearLayout>
</ScrollView>